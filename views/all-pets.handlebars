{{#each pets as |pet| }}
  <div class= "col-6">
  <div class="card small">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="pet-image activator" src='{{pet.petImage}}'>
    </div>
    <div class="card-content">
      <span class="test card-title activator grey-text text-darken-4">{{pet.pet_name}}<i class="material-icons right">...</i></span>
      <p><a href="/api/pets/{{pet.id}}" class="card-link">View Pet</a></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Pet Details<i class="material-icons right">close</i></span>
      <p>Type: {{pet.pet_type}}</p>
      <p>Color: {{pet.color}}</p>
      <p>Date of birth: {{pet.dateofbirth}}</p>
    </div>
  </div>
  </div>
{{/each}}