<form class="col-10 p-4 m-auto">
        <input type="hidden" id="edit-vet-id" value="{{vet.id}}"/>
        <h4 class="form group col-5 m-auto">EDIT VET VISIT</h4>
        <div class="form-group">
            <label for="vetDate">Date:</label>
             <input type="date" id='edited-date'>
        </div>
        <div class="form-group">
            <label for="vetDescription">Description:</label>
            <textarea class="form-control" id="edited-description" rows="3">{{vet.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="petWeight">Weight:</label>
            <textarea class="form-control" id="edited-weight" rows="1">{{vet.weight}}</textarea>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-dark col-4" id="edit-vet">Update Vet Visit</button>
        </div>
</form> 



<script src="/js/update-vet.js"></script>