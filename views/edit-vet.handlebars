<form class="col-10 p-4 m-auto" id="edit-vet">
        <input type="hidden" id="edit-vet-id" value="{{pet.id}}"/>
        <h4 class="form group col-5 m-auto">EDIT VET VISIT</h4>
        <div class="form-group">
            <label for="vetDate">Date:</label>
            <textarea class="form-control" id="edited-date" rows="1">{{vet-visit.date}}</textarea>
        </div>
        <div class="form-group">
            <label for="vetDescription">Description:</label>
            <textarea class="form-control" id="edited-description" rows="3">{{vet-visit.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="petWeight">Weight:</label>
            <textarea class="form-control" id="edited-weight" rows="1">{{vet-visit.weight}}</textarea>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-dark col-4">Update Vet Visit</button>
        </div>
</form> 

<div class="d-flex justify-content-center">
    <button class="btn btn-danger col-3" id="delete-vet-button">Delete Vet Visit</button>
</div>



<script src="/js/edit-vet.js"></script>